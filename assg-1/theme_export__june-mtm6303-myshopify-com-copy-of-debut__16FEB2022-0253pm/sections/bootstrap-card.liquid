
<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="{{ section.settings.card_image | image_url: width: 500 }}" alt="{{section.settings.card_image.alt}}">
  <div class="card-body">
    <h5 class="card-title">Office Furniture that is Beautiful</h5>
    <p class="card-text">Many variety of beautiful, custom and all organic furniture for the office. 100% of all the product is organic and biodegratible.</p>
    <a href="https://june-mtm6303.myshopify.com/products/couch-set" class="btn btn-primary">View</a>
  </div>
</div>

<style>
  .card .btn {
    background-color : {{ section.settings.btn-color}}
  }
  
</style>  


{% schema %}
{
    "name": "Bootstrap Card",
    "tag": "section",
    "settings": [
        {
          "type": "image_picker",
          "id": "card_image",
          "label": "Card Image"
        },
        {
            "type": "color",
            "id": "btn-color",
            "label": "Button Color",
            "default": "#3b4d28"
        }
    ],
    "presets": [{
        "name": "Bootstrap Card",
        "category": "Custom"
    }]
}


  
{% endschema %}

